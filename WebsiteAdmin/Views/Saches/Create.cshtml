                </div>
                <div class="mb-3">
                    <label asp-for="tacGia" class="form-label"> Tên Tác Giả</label>
                    <input asp-for="tacGia" class="form-control" />
                    <span asp-validation-for="tacGia" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="giaTien" class="form-label">Giá Tiền</label>
                    <input asp-for="giaTien" class="form-control" />
                    <span asp-validation-for="giaTien" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="nxb" class="form-label">Nhà Xuất Bản</label>
                    <input asp-for="nxb" class="form-control" />
                    <span asp-validation-for="nxb" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
